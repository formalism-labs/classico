
#----------------------------------------------------------------------------------------------

timer_set() {
	T0=$(date +%s.%N)
}

timer_elapsed() {
	echo $(date +%s.%N --date="$T0 seconds ago")
}

#----------------------------------------------------------------------------------------------

timestamp() {
	date +"%Y%m%d-%H%M%S"
}

timestampx() {
	date +"%Y%m%d-%H%M%S-%3N"
}

#----------------------------------------------------------------------------------------------
