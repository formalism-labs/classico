
is_command() {
	command -v $1 &> /dev/null
}

#----------------------------------------------------------------------------------------------

# NOP=1: do nothing, just print command
# LOG=0: when command fails, do not print the log
# V=0..2: control verbosity: 0: none, 1: print on failure, 2: print everything

runn() {
	if [[ $1 == @ ]]; then
		local cmd="$(mktemp)"
		cat > "$cmd"
		(( NOP == 1 || V >= 1 )) && cat "$cmd"
		[[ $NOP == 1 ]] && { rm -f "$cmd"; return; }
		if (( V < 2 )); then
			local log="$(mktemp)"
			local E
			{ bash "$cmd" > "$log" 2>&1 ; E=$?; } || true
			[[ $E != 0 && $LOG != 0 ]] && cat "$log"
			rm -f "$cmd" "$log"
		else
			{ bash "$cmd"; E=$?; } || true
			rm -f "$cmd"
		fi
		return $E
	else
		(( NOP == 1 || V >= 1 )) && { >&2 echo "$@"; }
		[[ $NOP == 1 ]] && { return; }
		if (( V < 2 )); then
			local log="$(mktemp)"
			local E
			{ eval "$@" > "$log" 2>&1 ; E=$?; } || true
			[[ $E != 0 && $LOG != 0 ]] && cat "$log"
			rm -f "$log"
			return $E
		else
			eval "$@"
		fi
	fi
}

#----------------------------------------------------------------------------------------------

spin_while() {
	local cmd="$@"
	if [[ -n $TEXT ]]; then
		local text="$TEXT"
	else
		local text="Working..."
	fi

	{
		spin='-\|/'
		local i=0
		tput civis
		while true; do
			i=$(( (i+1) % 4 ))
			printf "\r[%c] $TEXT" "${spin:$i:1}"
			sleep 0.1
		done
	} &
	local spinner_pid=$!

	local E
	{ $cmd; E=$?; } || true

	kill $spinner_pid
	wait $spinner_pid &> /dev/null || true
	tput cnorm
	if [[ $E == 0 ]]; then
		printf "\r\033[K[${GREEN}âœ”${BW}] Done.\n"
	else
		printf "\r\033[K[${RED}x${BW}] There are errors.\n"
	fi
	return $E
}

#----------------------------------------------------------------------------------------------

# usage:
# posh command...
# or:
# posh <<-'END'
#     commands...
#     END

posh() {
	local ps_exe=powershell.exe
	if is_command pwsh.exe; then
		ps_exe=pwsh.exe
	elif [[ -f '/c/Program Files/PowerShell/7/pwsh.exe' ]]; then
		ps_exe='/c/Program Files/PowerShell/7/pwsh.exe'
	fi

	PREFIX=posh SUFFIX=.ps1 heredoc <<-'END'; local cmd="$FILE"
		$ErrorActionPreference = 'Stop'
		END
	cmd="$(cygpath -m "$cmd")"

	if [[ $(platform_os) == windows ]]; then
		W_CLASSICO="$(cygpath -m $CLASSICO)"
		echo "\$CLASSICO=\"$W_CLASSICO\"" >> $cmd
	fi
	
	if [[ -t 0 ]]; then
		echo "$@" >> "$cmd"
	else
		cat >> "$cmd"
	fi
	(( NOP == 1 || V >= 1 )) && cat "$cmd"
	[[ $NOP == 1 ]] && return
	if (( V < 2 )); then
		mk_temp log; local log="$FILE"
		{ "$ps_exe" -File "$cmd" > "$log" 2>&1 ; local E=$?; } || true
		[[ $E != 0 && $LOG != 0 ]] && cat "$log"
		rm -f "$log"
	else
		if [[ $UTF16 == 1 || $UTF8 != 1 ]]; then
			{ "$ps_exe" -File "$cmd"; local E=$?; } || true
		elif [[ $UTF8 == 1 ]]; then
			{ "$ps_exe" -File "$cmd" 2>&1 | iconv -f UTF-16LE -t UTF-8; local E=$?; } || true
		fi
	fi
	rm -f "$cmd"
	return $E
}

#----------------------------------------------------------------------------------------------

# run $2 command file in docker container with id $1 by base64 decoding it and piping to bash

run_in_docker() {
	local did=$1
	local cmdf=$2
	local cmd="$(cat $cmdf | base64 -w0)"
	docker exec $did bash -c "echo '$cmd' | base64 -d | bash"
}

#----------------------------------------------------------------------------------------------

export -f is_command runn
