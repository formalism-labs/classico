
ifneq ($(MK.nobindir),1)

ifeq ($(BINDIR),)
$(error BINDIR is undefined)
endif

export MK_BINDIR:=$(BINDIR)

bindirs: $(BIN_DIRS)

.PHONY: bindirs

ifeq ($(MK_DIAG),1)
$(info # BIN_DIRS=$(BIN_DIRS))
endif

$(foreach DIR,$(BIN_DIRS),$(eval $(call mkdir_rule,$(DIR))))

else

bindirs: ;

endif # MK.nobindir
