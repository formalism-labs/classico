
# Interactive functions

#----------------------------------------------------------------------------------------------

eset() {
	read -r -e -p "$1=" -i "${!1}" "$1"
}

#----------------------------------------------------------------------------------------------

etmp() {
	local f=$(mktemp /tmp/et.XXXXXX)
	vim $f
	echo $f
}

#----------------------------------------------------------------------------------------------

var() {
	declare -F -p $1 2>/dev/null 1>&2
	if [[ $? == 0 ]]; then
		declare -f -p $1
	else
		declare -p $1
	fi
}

#----------------------------------------------------------------------------------------------

ppath() {
	local n=$1
	[[ -z $n ]] && n=PATH
	local v="${!n}"
	echo "${v//\:/$'\n'}"
}

#----------------------------------------------------------------------------------------------

title() {
	[[ -z "$1" ]] || PS1_TITLE="$1"
}

#----------------------------------------------------------------------------------------------

export -f eset etmp var ppath
